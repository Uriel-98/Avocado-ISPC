<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#B8E092">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="441dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_close_dialogPaso"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/x_icon" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/roboto_bold"
            android:padding="10dp"
            android:text="Paso de Preparación"
            android:textColor="#3C5B27"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/subtitulo_paso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:padding="10dp"
            android:text="Paso"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/text_tituloPaso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:hint="Título del Paso"
            android:padding="5dp" />

        <TextView
            android:id="@+id/subtitulo_pasoDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:padding="10dp"
            android:text="Descripción"
            android:textColor="#000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/text_descripcionPaso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="#fff"
            android:hint="Descripción del Paso"
            android:padding="5dp" />

        <Button
            android:id="@+id/btn_agregarPasoDialog"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FDFFEB"
            android:fontFamily="@font/roboto"
            android:text="Agregar Paso"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="15sp"
            app:cornerRadius="100dp"
            app:icon="@drawable/mas_icono"
            app:iconTint="#000000" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>