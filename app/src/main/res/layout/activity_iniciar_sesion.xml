<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IniciarSesionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_volver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#02FFFFFF"
            android:contentDescription="Botón de volver al home"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="212dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/logo_nombre" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="332dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/roboto"
            android:text="¡Bienvenido de vuelta! Por favor, inicia sesión para acceder a tu cuenta"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/input_email"
            android:layout_width="237dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:backgroundTint="#D9D9D9"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:inputType="textEmailAddress"
            android:text="Correo Electrónico"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/input_contrasena"
            android:layout_width="237dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:backgroundTint="#D9D9D9"
            android:ems="10"
            android:fontFamily="@font/roboto"
            android:text="Contraseña"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btn_iniciarsesion"
            android:layout_width="202dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:backgroundTint="#B8E092"
            android:fontFamily="@font/roboto"
            android:text="Iniciar Sesión"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20sp"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/btn_registrarse"
            android:layout_width="236dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#00FFFFFF"
            android:fontFamily="@font/roboto"
            android:text="No tienes cuenta? Regístrate"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>